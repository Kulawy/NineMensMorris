        <RadioButton GroupName="P2_RatioHeuristicType" x:Name="P2_CalculateHeuristic3_RadioButton" Content="HeuristicTree" HorizontalAlignment="Left" Margin="185,299,0,0" VerticalAlignment="Top" FontSize="14" Height="15" Width="103"/>
        <RadioButton GroupName="P1_GameHeuristicType" x:Name="P1_GameHeuristic1_RadioButton" Content="HeuristicOne" HorizontalAlignment="Left" Margin="343,51,0,0" VerticalAlignment="Top" FontSize="14" IsChecked="True" />
        <RadioButton GroupName="P1_GameHeuristicType" x:Name="P1_GameHeuristic2_RadioButton" Content="HeuristicTwo" HorizontalAlignment="Left" Margin="343,69,0,0" VerticalAlignment="Top" FontSize="14"/>
        <RadioButton GroupName="P1_GameHeuristicType" x:Name="P1_GameHeuristic3_RadioButton" Content="HeuristicTree" HorizontalAlignment="Left" Margin="343,92,0,0" VerticalAlignment="Top" FontSize="14"/>
        <RadioButton GroupName="P2_GameHeuristicType" x:Name="P2_GameHeuristic1_RadioButton" Content="HeuristicOne" HorizontalAlignment="Left" Margin="342,255,0,0" VerticalAlignment="Top" FontSize="14" IsChecked="True"/>
        <RadioButton GroupName="P2_GameHeuristicType" x:Name="P2_GameHeuristic2_RadioButton" Content="HeuristicTwo" HorizontalAlignment="Left" Margin="342,275,0,0" VerticalAlignment="Top" FontSize="14"/>
        <RadioButton GroupName="P2_GameHeuristicType" x:Name="P2_GameHeuristic3_RadioButton" Content="HeuristicTree" HorizontalAlignment="Left" Margin="342,298,0,0" VerticalAlignment="Top" FontSize="14" Height="15" Width="103"/>
        <Label Content="Ratio Count Heuristic:" HorizontalAlignment="Left" Margin="165,12,0,0" VerticalAlignment="Top" Height="25" Width="155" FontWeight="Bold" FontSize="14
               "/>
        <Label Content="Game Heuristic:" HorizontalAlignment="Left" Margin="325,12,-10,0" VerticalAlignment="Top" Height="25" Width="155" FontWeight="Bold" FontSize="14                "/>


    </Grid>

